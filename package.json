{
  "name": "unique-names-generator",
  "version": "1.1.0",
  "description": "Generate unique and memorable names",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "lint": "tslint -c tslint.json 'lib/**/*.ts'",
    "pretest": "npm run build",
    "test": "npm run format && npm run lint && jest",
    "test:watch": "jest --watchAll",
    "format": "prettier --write lib/**/*.ts",
    "prebuild": "rimraf dist && npm run format",
    "build": "tsc",
    "prerelease": "npm run build",
    "release": "np --no-yarn"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "tags": [
    "name-generator",
    "unique-names",
    "typescript"
  ],
  "files": [
    "dist/"
  ],
  "author": "AndreaSonny <andreasonny83@gmail.com>",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:andreasonny83/unique-names-generator.git"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "jest": "^23.6.0",
    "np": "^3.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.{js,jsx,ts,tsx}",
      "!lib/**/*.d.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ]
  }
}
